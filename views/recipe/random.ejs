     <!-- RESET RANDOM BUTTON -->
     <a href="/random" class="reset-random"><i class="fa-solid fa-arrows-rotate"></i></a>


<div class="modal recipe-modal">

    <!-- BACK BUTTON -->
    <a href="/" class="close">&times;</a>

    <!-- RECIPE TITLE -->
    <h1 class="recipe-title"><%= recipe.name %></h1>

    <div id="selected-recipe-container">

        <!-- INGREDIENT LIST CONTAINER-->
        <ul id="selected-recipe-list">
            <% for (var i = 0; i < recipe.ingredients.length ; i++) { %>
            <li> <%= recipe.ingredients[i] %> </li>
            <% } %>
        </ul>

        <!-- RECIPE INSTRUCTIONS CONTAINER -->
        <div id="recipe-intructions"> <%= recipe.instructions %> </div>
    </div>

    <!-- DELETE RECIPE MODAL -->
    <div class="modal delete-modal" id="delete-modal">
        <!-- BACK BUTTON -->
        <a href="/random/<%= recipe.id %>" class="close">&times;</a>

        <h1>Are you sure you want to delete this recipe?</h1>

        <div class="delete-answers">
            <button class="no-button">NO</button>

            <form action="/edit/<%= recipe._id %>?_method=DELETE" method="POST">
                <button type="submit" id="delete-yes">YES</button>
            </form>
        </div>
    </div>


    <!-- EDIT & DELETE BUTTON CONTAINER -->
    <div class="recipe-button-container">
        <!-- EDIT BUTTON -->
        <a href="/edit/<%= recipe._id %>" type="button">
            <i class="fa-solid fa-pencil"></i>
        </a>
        <!-- DELETE BUTTON -->
        <a id="delete-button" type="button">
            <i class="fa-solid fa-ban"></i>
        </a>
    </div>
</div>
